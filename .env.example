# Configuration SMTP IONOS pour les emails
IONOS_SMTP_HOST=smtp.ionos.fr
IONOS_SMTP_PORT=587
IONOS_SMTP_USER=support@proviabase.fr
IONOS_SMTP_PASS=your_smtp_password_here
DEMO_TO_EMAIL=support@proviabase.fr

# Configuration Supabase (OBLIGATOIRE pour l'authentification)
# Récupérez ces valeurs depuis : https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Configuration Stripe (OBLIGATOIRE pour les paiements)
# Récupérez ces valeurs depuis : https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_or_sk_test_your_key_here
# Créez un webhook endpoint sur https://dashboard.stripe.com/webhooks
# URL: https://your-domain.com/api/stripe/webhook
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# URL du site (pour les redirections Stripe)
VITE_SITE_URL=https://your-domain.com
